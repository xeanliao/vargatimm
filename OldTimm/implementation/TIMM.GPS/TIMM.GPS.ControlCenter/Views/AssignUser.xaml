<controls:ChildWindowBase x:Class="TIMM.GPS.ControlCenter.Views.AssignUser"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:TIMM.GPS.ControlCenter.Controls"
           Width="400" Height="350" 
           Title="AssignUser">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListBox x:Name="listUser"  ItemsSource="{Binding}" DisplayMemberPath="UserName" SelectedValuePath="Id" Height="280" Margin="10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button x:Name="CancelButton" MinWidth="80" Height="30" Content="Cancel" Click="CancelButton_Click" Margin="5 0" />
            <Button x:Name="OKButton" IsEnabled="{Binding SelectedValue, ElementName=listUser, Converter={StaticResource NullToFalseConverter} }" MinWidth="80" Height="30" Style="{StaticResource OrangeButton}" Content="Save" Click="OKButton_Click" Margin="5 0" />
        </StackPanel>
    </Grid>
</controls:ChildWindowBase>