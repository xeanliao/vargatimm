<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains job definitions in schema version 2.0 format -->

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>
  
  <schedule>
    <job>
      <name>ParseNonDeliverableAddressesJob</name>
      <group>FileSystemGroup</group>
      <description>Parse user upload ND file</description>
      <job-type>TIMM.Jobs.NonDeliverableAddresses.ParseNonDeliverableAddressesJob, TIMM.Jobs</job-type>
      <durable>true</durable>
      <recover>true</recover>
    </job>

    <trigger>
      <simple>
        <name>FileWatcherTrigger</name>
        <group>FileWatcherTriggerGroup</group>
        <description>Must keep the trigger name, for add a Trigger Listener to this trigger base on the trigger name</description>
        <job-name>ParseNonDeliverableAddressesJob</job-name>
        <job-group>FileSystemGroup</job-group>
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <repeat-count>-1</repeat-count>
        <repeat-interval>100</repeat-interval>
      </simple>
    </trigger>
    
  </schedule>
</job-scheduling-data>